                    <Border Height="200" Background="{DynamicResource Back}" VerticalAlignment="Top" Margin="25" CornerRadius="6" BorderBrush="{DynamicResource WinBrdr}" BorderThickness="1" >
                        <Grid>
                            <StackPanel Orientation="Horizontal" Name="SPanelSymbols" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Canvas Name="CanvasNoise" ClipToBounds="True"/>
                        </Grid>
                    </Border>
                    <Grid Height="35">
                        <TextBox x:Name="CaptchBox" Style="{DynamicResource txt}" Height="35" FontSize="24" Margin="10,0,65,0" Tag="Код подтверждения"/>
