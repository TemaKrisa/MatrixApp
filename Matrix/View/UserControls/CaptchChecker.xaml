                        </Button>
                    </Grid>
                    <Button x:Name="EnterBtn" Style="{DynamicResource btn}" Foreground="White" Height="35" Margin="10" Width="auto" Content="Ввести" Click="EnterBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
